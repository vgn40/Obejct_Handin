/*

1 - What to wear

 */


function jacketMaster(temp) {
if (temp < 0){
    return "You should wear a jacket"}
else if (temp > 0){
    return"you should put on shorts"
}
else if (temp % 0 !== 0){
    return "please enter a number"
}
}

console.log(jacketMaster(3))
